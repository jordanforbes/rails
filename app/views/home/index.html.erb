
<div class="container">
	<div class="row">
	<%= render 'navbar' %>
	</div>
	<div class="row">
		<div class="col-md-4">
		<%= render 'posts/form', post:  @post %>
				
			
	 	<%= render "home/sign_up" %>


			<% @users.each do|user| %>
				<li><%=user.first_name%> <%=user.email%></li>
			<% end %>
		</div>
		<div class="col-md-4">

			<h1>Posts</h1>

				<table>
				  <thead>
				    <tr>
				      <th>Title</th>
				      <th>Body</th>
				      <th>User</th>
				      <th colspan="3"></th>
				    </tr>
				  </thead>

				  <tbody>
				    <% @posts.each do |post| %>
				      <tr>
				        <td><%= post.title %></td>
				        <td><%= post.body %></td>
				        <td><%= post.user_id %></td>
				        <td><%= link_to 'Show', post %></td>
				        <td><%= link_to 'Edit', edit_post_path(post) %></td>
				        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				      </tr>
				    <% end %>
				  </tbody>
				</table>
		</div>
		<div class="col-md-4">
		</div>
	</div>
</div>

	 

		